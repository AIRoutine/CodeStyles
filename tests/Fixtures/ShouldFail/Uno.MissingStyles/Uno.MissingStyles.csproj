<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <!-- Disable color validation to isolate style validation test -->
    <UnoCodeStyleValidateColors>false</UnoCodeStyleValidateColors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AIRoutine.CodeStyle.Uno" Version="1.1.*" />
  </ItemGroup>

  <!-- Include XAML files as content so they get validated -->
  <ItemGroup>
    <None Remove="**\*.xaml" />
    <Content Include="**\*.xaml" />
  </ItemGroup>

</Project>
